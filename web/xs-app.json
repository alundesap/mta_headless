{
  "welcomeFile": "index.html",
  "authenticationMethod": "route",
  "logout": {
    "logoutEndpoint": "/logout"
  },
  "routes": [
    {
      "source": "(login/)(.*)",
      "destination": "util_be",
      "csrfProtection": true,
      "authenticationType": "none"
    },
    {
      "source": "(logout/)(.*)",
      "destination": "util_be",
      "csrfProtection": true,
      "authenticationType": "none"
    },
    {
      "source": "(util/)(.*)",
      "destination": "util_be",
      "csrfProtection": true,
      "authenticationType": "xsuaa"
    },
    {
      "source": "(callback/)(.*)",
      "destination": "util_be",
      "csrfProtection": true,
      "authenticationType": "none"
    },
    {
      "source": "(headless/admin/getpw)(.*)",
      "destination": "chrome_be",
      "csrfProtection": true,
      "scope": ["$XSAPPNAME.view"],
      "authenticationType": "xsuaa"
    },
    {
      "source": "(headless/admin/setpw)(.*)",
      "destination": "chrome_be",
      "httpMethods": ["POST", "GET"],
      "csrfProtection": true,
      "scope": ["$XSAPPNAME.create"],
      "authenticationType": "xsuaa"
    },
    {
      "source": "(headless/admin/delpw)(.*)",
      "destination": "chrome_be",
      "httpMethods": ["POST", "GET"],
      "csrfProtection": true,
      "scope": ["$XSAPPNAME.create"],
      "authenticationType": "xsuaa"
    },
    {
      "source": "(headless/)(.*)",
      "destination": "chrome_be",
      "csrfProtection": true,
      "scope": ["$XSAPPNAME.view"],
      "authenticationType": "xsuaa"
    },
    {
      "localDir": "resources",
      "source": "^/(.*)",
      "authenticationType": "none"
    }
  ]
}
